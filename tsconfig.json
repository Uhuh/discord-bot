{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "build",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/", "events/", "commands/", "utilities/"],
  "exclude": ["node_modules/"],
  "compileOnSave": true
}
